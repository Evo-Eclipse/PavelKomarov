<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Задание ScrollView"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/neutral_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Раздел 1: Введение в Android"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android — операционная система для мобильных устройств, разработанная
                компанией Google. Она основана на модифицированной версии ядра Linux и
                другогопрограммного обеспечения с открытым исходным кодом. Android преимущественно
                разработан для сенсорных мобильных устройств, таких как смартфоны и планшеты."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Раздел 2: Архитектура Android"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Архитектура Android включает несколько уровней, начиная от ядра
                Linux, через нативные библиотеки, Android Runtime (ART), фреймворк приложений и
                заканчивая системными приложениями. Каждый уровень имеет свои функции и
                обеспечивает определенный набор сервисов для вышележащего уровня."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Раздел 3: Компоненты приложения Android"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="В Android приложении могут использоваться следующие компоненты:
                Activity, Service, Broadcast Receiver, Content Provider. Каждый компонент выполняет
                свою роль в общей функциональности приложения и имеет свой жизненный цикл."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Раздел 4: Жизненный цикл Activity"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Жизненный цикл Activity включает следующие методы: onCreate(),
                onStart(), onResume(), onPause(), onStop(), onDestroy(). Каждый метод вызывается
                при определенных условиях, например, onCreate() вызывается при создании Activity,
                а onDestroy() — при ее уничтожении."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Раздел 5: Работа с UI в Android"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android предоставляет богатый набор элементов UI для создания
                пользовательского интерфейса. Основные из них: TextView, EditText, Button,
                ImageView, ListView, RecyclerView, ViewPager и т.д. Каждый элемент имеет свои
                атрибуты и методы для настройки его внешнего вида и поведения."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Раздел 6: Работа с данными"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Для работы с данными Android предоставляет различные механизмы,
                такие как SharedPreferences, файловую систему, SQLite базы данных, Content
                Providers и Room Persistence Library. Каждый механизм имеет свои преимущества
                и недостатки и подходит для определенных сценариев использования."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Раздел 7: Асинхронное программирование"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Для асинхронного программирования в Android можно использовать такие
                инструменты, как Threads, Handlers, AsyncTask, Loaders, WorkManager, RxJava и
                Kotlin Coroutines. Асинхронное программирование позволяет выполнять длительные
                операции без блокировки главного потока, что обеспечивает отзывчивость приложения."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/neutral_surface"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ваш комментарий:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/commentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите ваш комментарий здесь..."
                android:minLines="3"
                android:maxLines="5"
                android:gravity="top|start"
                android:background="@drawable/rounded_image"
                android:padding="12dp"
                android:textSize="14sp"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отправить"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>