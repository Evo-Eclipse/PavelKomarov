<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:stretchColumns="*">

    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Форма данных студента"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_span="2"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />
    </TableRow>

    <TableRow android:layout_marginVertical="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ФИО:"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:hint="@string/hint_full_name"
            android:inputType="text"
            android:minHeight="48dp" />
    </TableRow>

    <TableRow android:layout_marginVertical="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Группа:"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTextGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="group"
            android:hint="@string/hint_group_number"
            android:inputType="text"
            android:minHeight="48dp" />
    </TableRow>

    <TableRow android:layout_marginVertical="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Возраст:"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="age"
            android:hint="@string/hint_age"
            android:inputType="number"
            android:minHeight="48dp" />
    </TableRow>

    <TableRow android:layout_marginVertical="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оценка:"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTextGrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="grade"
            android:hint="@string/hint_grade"
            android:inputType="number"
            android:minHeight="48dp" />
    </TableRow>

    <!-- Empty space to separate buttons and input fields -->
    <TableRow android:layout_weight="1">
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </TableRow>

    <TableRow
        style="?android:attr/buttonBarStyle"
        android:gravity="center">

        <Button
            android:id="@+id/btnDeclarative"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:minHeight="48dp"
            android:text="@string/text_button_declarative"
            android:onClick="goDeclaratively" />

        <Button
            android:id="@+id/btnProgrammatic"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:minHeight="48dp"
            android:text="@string/text_button_program" />
    </TableRow>
</TableLayout>